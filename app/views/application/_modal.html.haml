.ui.modal.small.add_department_modal
  %i.close.icon
  .header
    = t("modal.add_department")
  .content
    = form_tag namespace_index_path, {class:'ui form add_department_form'} do |f|
      .field
        %label
          = t("modal.add_department_tips")
        = select_tag  :namespace, nil, :multiple => true, class:'namespace_selector ui multiple search dropdown'
  .actions
    .ui.black.deny.button
      = t("modal.cancel")
    .ui.positive.right.labeled.icon.button
      = t("modal.ok")
      %i.checkmark.icon
.long.ui.modal.small.add_employee_modal
  %i.close.icon
  .header
    = t("modal.add_employee")
  .content
    = form_for User.new, :html => {class:'ui form add_employee_form'} do |f|
      .field
        %label
          = t("modal.employee_email")
        = f.text_field :email
      .field
        %label
          = t("modal.employee_password")
        = f.password_field  :password, value: 'hwwhww'
      .field
        %label
          = t("modal.first_name")
        = f.text_field  :first_name
      .field
        %label
          = t("modal.last_name")
        = f.text_field  :last_name
      .field
        %label
          = t("modal.annual_salary")
        = f.text_field  :annual_salary
      .field
        %label
          = t("modal.super_rake")
        = f.text_field  :super_rate
      - if Namespace.all.present?
        .field
          %label
            = t("modal.add_to_department")
          = select_tag  :department, options_from_collection_for_select(Namespace.all, "id","name"), { prompt: t("modal.add_to_department_promot"), class:'add_to_department ui search dropdown' }
  .actions
    .ui.black.deny.button
      = t("modal.cancel")
    .ui.positive.right.labeled.icon.button
      = t("modal.ok")
      %i.checkmark.icon
