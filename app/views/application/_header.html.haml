%header.headeroom
  .ui.vertical.center.aligned.segment.header-menu
    .ui.container
      .ui.large.secondary.menu
        = link_to "PAYSLIP",root_path, class:"item #{nav_active(path: 'dashboard#index')}"
        - if current_user
          = link_to t("header.department"), namespace_index_path, class:"item #{nav_active(path: 'namespace#index')}"
          = link_to t("header.employee"), employee_index_path, class:"item #{nav_active(path: 'employee#index')}"
        .right.item
          - if current_user
            .ui.dropdown.signed_in_dpd
              = current_user.email
              %i.dropdown.icon
              .menu
                = link_to "javascript:void(0)", class:'item', data:  { behavior: "adddepartment" } do
                  %i.add.group.icon
                  = t("header.add_department")
                = link_to "javascript:void(0)", class:'item', data: { behavior: 'addemployee'  } do
                  %i.add.user.icon
                  = t("header.add_employee")
                = link_to calculate_path, method: :get, class:'item' do
                  %i.calculator.icon
                  = t("header.calculate_paysplip")
                = link_to session_path, method: :delete, class:'logout item' do
                  %i.sign.out.icon
                  = t("layouts.application.sign_out")
            = render  'modal'
          - else
            = link_to t("layouts.application.sign_in"), sign_in_path
